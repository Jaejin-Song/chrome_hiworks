{
  "manifest_version": 3,
  "name": "hiworks 법카 팀비 계산기",
  "description": "hiworks 개인, 팀비 법카 자동 계산기",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://hr-work.office.hiworks.com/accounting/corporation/*"]
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
